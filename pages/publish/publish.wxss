/* pages/publish/publish.wxss */
page {
  height: 100%;
}
.container{
  height: 100%;
}
.scroll{
  height: calc(100vh - 150rpx);
  border-bottom:1rpx solid gainsboro ;
}
/* cell 盒子样式 */
.timeStyle,.ChooseLocation,.scoreTypeWrap,.detailWrap,.switchBtnWrap,.ActivityTypeWrap{
  position: relative;
  display: flex;
  width: 100%;
  padding: 10px 15px;
  font-size: 14px;
  line-height: 24px;
  color: #333;
  background-color: #fff;
  box-sizing: border-box;
}
/* cell 底部实线 */
.timeStyle:after,.ChooseLocation:after,.scoreTypeWrap:after,.switchBtnWrap:after,.ActivityTypeWrap:after {
  content: " ";
  position: absolute;
  pointer-events: none;
  box-sizing: border-box;
  -webkit-transform-origin: center;
  transform-origin: center;
  top: auto;
  left: 15px;
  right: 0;
  bottom: 0;
  -webkit-transform: scaleY(.5);
  transform: scaleY(.5);
  border-bottom: 1px solid #eee;
}
/* cell 标题 */
.timeTitle,.locationTitle,.scoreTypeTitle,.detailTitle,.ActivityTypeTitle {
  max-width: 90px;
  min-width: 90px;
  -webkit-flex: 1;
  flex: 1;
  padding: 0;
  box-sizing: border-box;
  display: block;
}
/* 带有开关的cell  微调 */
.switchBtnWrap,.ActivityTypeWrap{
  justify-content: space-between;
  align-items: center;
  padding:6px 15px;
}
.ActivityTypeWrap{
  justify-content: start;
}
.ActivityTypeContent{
  width: 100%;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

/* 预览和发布按钮wrap */
.pubBtnWrap{
  position: fixed;
  bottom: 0;
  left: 0;
  z-index: 1000;
  text-align: center;
  width: 100%;
  height: 150rpx;
  display: flex;
  justify-content: space-evenly;
  align-items: center;
}
.previewBtn{
  color: var(--themeColor);
  border: 1px solid;
  width: 20vw;
  font-size: 30rpx;
  background-color: #fff;
  margin:0;
}
.pubBtn{
  background-color: var(--themeColor);
  color: #fff;
  width: 55vw;
  font-size: 30rpx;
  margin:0
}

/* 选择时间样式 */
.timeNumber{
  display: flex;
}
.timeNumber>picker:first-child{
  margin-right: 20px;
}
.iconStyle{
  font-size: 26px;
  position: absolute;
}
.clockInLocation{
  margin-left: 30px;
}
.GaryColor{
  color: #A699A6;
}
.srollAndtextArea{
  height: 60vh;
}
textarea{
  width: 100%;
  padding: 10px 15px;
  font-size: 14px;
  height: 100vh;
}