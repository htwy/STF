/* pages/guide/guide.wxss */
.guide_wrap{
  padding: 0rpx 30rpx;
}
.guide_wrap>view:not(:last-child){
  border-bottom: 1rpx solid gainsboro;
}
.title{
  font-size: 36rpx;
  padding-top: 30rpx;
  color: var(--themeColor);
  font-weight: bold;
}
.content{
  text-indent: 2em;
  padding: 10rpx 0 15rpx;
  line-height: 40rpx;
  font-size: 30rpx;
}
.guide_wrap>view:last-child>.content{
  margin-bottom: 30rpx;
}